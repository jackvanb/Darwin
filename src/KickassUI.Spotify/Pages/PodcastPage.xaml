     <ListView x:Name="lstView" ItemsSource="{Binding Podcast.Episodes}" ItemSelected="OnPodcastSelected" BackgroundColor="#181818" SeparatorVisibility="None" RowHeight="60" >
        <ListView.ItemTemplate >
            <DataTemplate>
                <ViewCell>
                    <Grid RowSpacing="2" Margin="0"  Padding="10,10,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Style="{StaticResource BoldLabel}" Text="{Binding Title}" TextColor="White" FontSize="18" FontAttributes="Bold" />
                         <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Start">
                            <Image HorizontalOptions="Start" HeightRequest="25" WidthRequest="25" Source="{Binding AlbumImageURL}" >   
                            </Image>
                            <Label Text="{Binding Artist}" Style="{StaticResource BoldLabel}" FontSize="13" TextColor="#adaeb2" />
                        </StackLayout>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </ContentPage.Content>
</ContentPage>
